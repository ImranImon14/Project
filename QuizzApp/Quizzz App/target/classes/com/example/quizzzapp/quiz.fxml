<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.quizzzapp.QuizController"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="questionLabel" wrapText="true" style="-fx-font-size: 16px;" />

    <RadioButton fx:id="option1"/>
    <RadioButton fx:id="option2"/>
    <RadioButton fx:id="option3"/>
    <RadioButton fx:id="option4"/>

    <Button text="Submit" onAction="#handleSubmit"/>

</VBox>
